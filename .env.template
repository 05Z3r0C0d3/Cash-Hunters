# ===============================================
# CASH HUNTERS BOT NETWORK - ENVIRONMENT CONFIG
# ===============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===============================================
# BOT TOKENS (REQUIRED)
# ===============================================
# Get these from @BotFather on Telegram
MASTER_BOT_TOKEN=your_master_bot_token_here
PUBLIC_BOT_TOKEN=your_public_bot_token_here

# ===============================================
# ADMIN SETTINGS (REQUIRED)
# ===============================================
# Get your user ID from @userinfobot on Telegram
ADMIN_ID=123456789
ADMIN_USERNAME=your_telegram_username

# ===============================================
# COMMISSION SETTINGS
# ===============================================
# Commission rates (as decimal, e.g., 0.15 = 15%)
MASTER_COMMISSION_RATE=0.15
PUBLIC_COMMISSION_RATE=0.12
REFERRAL_BONUS=5.00

# ===============================================
# DATABASE SETTINGS
# ===============================================
# Local SQLite (default) or PostgreSQL for production
DATABASE_URL=sqlite:///cash_hunters.db
# DATABASE_URL=postgresql://user:password@localhost/cash_hunters

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# ===============================================
# API KEYS (OPTIONAL - FOR EARNING FEATURES)
# ===============================================

# Crypto Price APIs (FREE)
COINGECKO_API_KEY=your_coingecko_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Exchange APIs (FREE)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
COINBASE_API_KEY=your_coinbase_api_key

# Earning APIs (PREMIUM - HIGH PROFIT)
RAKUTEN_API_KEY=your_rakuten_api_key
AMAZON_API_KEY=your_amazon_affiliate_key

# ===============================================
# SECURITY SETTINGS
# ===============================================
# Rate limiting (requests per minute per user)
RATE_LIMIT_PER_MINUTE=20

# Maximum users per bot instance
MAX_USERS_PER_BOT=10000

# Session timeout (seconds)
SESSION_TIMEOUT=3600

# ===============================================
# FILE PATHS
# ===============================================
# Shared data between bots
SHARED_DATA_FILE=bot_network_data.json

# Logging
LOG_FILE=cash_hunters.log

# Backup directory
BACKUP_DIR=./backups

# ===============================================
# WEBHOOK SETTINGS (PRODUCTION ONLY)
# ===============================================
# Leave empty for polling mode (development)
WEBHOOK_URL=
WEBHOOK_PORT=8443

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================
# Set to True for debug mode
DEBUG=False

# Environment (development/production)
ENVIRONMENT=development

